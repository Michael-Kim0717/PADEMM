<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/materialImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/materialCount"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/textview"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/materialImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp" />

    <Button
        android:id="@+id/addMaterial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="+"
        android:layout_below="@+id/materialImage"
        android:layout_alignLeft="@+id/materialImage"
        android:layout_alignStart="@+id/materialImage" />

    <Button
        android:id="@+id/subtractMaterial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-"
        android:layout_marginTop="15dp"
        android:layout_alignBaseline="@+id/addMaterial"
        android:layout_alignBottom="@+id/addMaterial"
        android:layout_alignRight="@+id/materialCount"
        android:layout_alignEnd="@+id/materialCount" />
</RelativeLayout>