<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/monster1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="37dp"
        android:layout_x="31dp"
        android:layout_y="22dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/monster1"
        android:layout_centerHorizontal="true"
        android:layout_x="100dp"
        android:layout_y="32dp"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/priorityLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="228dp"
        android:layout_y="38dp"
        android:text="TextView" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:layout_x="296dp"
        android:layout_y="22dp"
        android:text="Delete"
        android:textSize="11sp"
        android:focusable="false"/>

    <ImageView
        android:id="@+id/monsterToEvo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="37dp"
        android:layout_x="154dp"
        android:layout_y="20dp"
        app:srcCompat="@mipmap/ic_launcher" />

</AbsoluteLayout>